<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type 의 별칭을 등록 해 놓고  Mapper xml 에서 사용할수 있다. -->
	<typeAliases>
		<typeAlias type="com.gura.spring03.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.gura.spring03.file.dto.FileDto" alias="fileDto"/>
		<typeAlias type="com.gura.spring03.cafe.dto.CafeDto" alias="cafeDto"/>
		<typeAlias type="com.gura.spring03.cafe.dto.CafeCommentDto" alias="cafeCommentDto"/>
		<typeAlias type="com.gura.spring03.gallery.dto.GalleryDto" alias="galleryDto"/>
		<typeAlias type="com.gura.spring03.shop.dto.OrderDto" alias="orderDto"/>
		<typeAlias type="com.gura.spring03.shop.dto.ShopDto" alias="shopDto"/>
	</typeAliases>
	<!-- 필요한 Mapper xml 등록하기  -->
	<mappers>
		<mapper resource="com/gura/spring03/mybatis/UsersMapper.xml"/>
		<mapper resource="com/gura/spring03/mybatis/FileMapper.xml"/>
		<mapper resource="com/gura/spring03/mybatis/CafeMapper.xml"/>
		<mapper resource="com/gura/spring03/mybatis/CafeCommentMapper.xml"/>
		<mapper resource="com/gura/spring03/mybatis/GalleryMapper.xml"/>
		<mapper resource="com/gura/spring03/mybatis/ShopMapper.xml"/>
	</mappers>
</configuration>